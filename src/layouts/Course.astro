---
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import tz from "dayjs/plugin/timezone";
import customParseFormat from "dayjs/plugin/customParseFormat";
dayjs.extend(utc);
dayjs.extend(tz);
dayjs.extend(customParseFormat);

import Html from "@/layouts/Html.astro";

interface Frontmatter {
  title: string;
  createdAt: string;
  description: string;
  section: string;
  sort: number;
}

interface Props {
  frontmatter: Frontmatter;
}

const { frontmatter } = Astro.props;
const { title, createdAt, description, section } = frontmatter;

const allArticles = await Astro.glob<Frontmatter>("../pages/**/*.md");
const filtered = allArticles.filter((article) => article.url.includes(section));
const articles = filtered.sort((a, b) => a.frontmatter.sort - b.frontmatter.sort)

const timezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
const date = dayjs(createdAt, "DD-MM-YYYY").tz(timezone).format("DD MMM, YYYY");
---

<Html title={title} description={description} lang="es">
  <div class="content">
    <aside class="sidebar">
      <h2 class="sidebar__title">√çndice</h2>
      <!-- TODO Add styles to sidebar article list -->
      <ol class="sidebar__list">
        {
          articles.map((article) => (
            <li>
              <a href={article.url}>{article.frontmatter.title}</a>
            </li>
          ))
        }
      </ol>
    </aside>
    <main class="content__article">
      <h1 class="article__title">{title}</h1>
      <div class="article__date">
        <time datetime={createdAt}>{date}</time>
      </div>
      <p>{description}</p>
      <slot />
    </main>
  </div>
</Html>

<style is:global>
  p {
    margin-bottom: 1rem;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    font-size: 1.125rem;
    padding: 0 2rem;
  }

  pre {
    padding: 1rem;
    margin-bottom: 1rem;
  }
</style>

<style>
  .content {
    grid-area: main;
    display: flex;
    margin: 0 auto;
    padding: 2rem;
  }

  .content__article {
